{
    "openapi": "3.0.0",
    "info": {
        "title": "Meem Market API",
        "description": "API documentation for Meem Market",
        "contact": {
            "email": "admin@meem-market.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000",
            "description": "Demo API Server"
        }
    ],
    "paths": {
        "/api/v1/about": {
            "get": {
                "tags": [
                    "About"
                ],
                "summary": "Get about page data",
                "description": "Returns about sections and competitive features",
                "operationId": "getAboutData",
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            }
        },
        "/api/v1/branches": {
            "get": {
                "tags": [
                    "Branches"
                ],
                "summary": "Get list of branches",
                "description": "Returns all branches, filterable by country_id",
                "operationId": "getBranches",
                "parameters": [
                    {
                        "name": "country_id",
                        "in": "query",
                        "description": "Country ID",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/api/v1/branches/{slug}": {
            "get": {
                "tags": [
                    "Branches"
                ],
                "summary": "Get branch information",
                "description": "Returns branch data and offer categories",
                "operationId": "getBranchBySlug",
                "parameters": [
                    {
                        "name": "slug",
                        "in": "path",
                        "description": "Branch Slug",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    },
                    "404": {
                        "description": "Resource Not Found"
                    }
                }
            }
        },
        "/api/v1/careers": {
            "get": {
                "tags": [
                    "Careers"
                ],
                "summary": "Get list of careers",
                "description": "Returns active career opportunities",
                "operationId": "getCareers",
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            }
        },
        "/api/v1/careers/{slug}": {
            "get": {
                "tags": [
                    "Careers"
                ],
                "summary": "Get career details",
                "description": "Returns details of a specific job",
                "operationId": "getCareerBySlug",
                "parameters": [
                    {
                        "name": "slug",
                        "in": "path",
                        "description": "Career Slug",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    },
                    "404": {
                        "description": "Resource Not Found"
                    }
                }
            }
        },
        "/api/v1/contact": {
            "get": {
                "tags": [
                    "Contact"
                ],
                "summary": "Get contact information",
                "description": "Returns contact and social settings",
                "operationId": "getContactInfo",
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            },
            "post": {
                "tags": [
                    "Contact"
                ],
                "summary": "Submit a contact message",
                "description": "Stores a new contact message",
                "operationId": "storeContactMessage",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "message"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "John Doe"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "john@example.com"
                                    },
                                    "phone": {
                                        "type": "string",
                                        "example": "0500000000"
                                    },
                                    "subject": {
                                        "type": "string",
                                        "example": "Inquiry"
                                    },
                                    "message": {
                                        "type": "string",
                                        "example": "Hello Meem Market"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Message sent successfully"
                    },
                    "422": {
                        "description": "Validation Error"
                    }
                }
            }
        },
        "/api/v1/countries": {
            "get": {
                "tags": [
                    "Countries"
                ],
                "summary": "Get list of countries",
                "description": "Returns active countries with their branches",
                "operationId": "getCountries",
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            }
        },
        "/api/v1/home": {
            "get": {
                "tags": [
                    "Home"
                ],
                "summary": "Get home page data",
                "description": "Returns sliders, sections, partners, and features",
                "operationId": "getHomeData",
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/api/v1/offers": {
            "get": {
                "tags": [
                    "Offers"
                ],
                "summary": "Get list of offers",
                "description": "Returns offers, filterable by branch_slug and category_slug",
                "operationId": "getOffers",
                "parameters": [
                    {
                        "name": "branch_slug",
                        "in": "query",
                        "description": "Branch Slug",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "category_slug",
                        "in": "query",
                        "description": "Category Slug",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Page Number",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/api/v1/settings/{group}": {
            "get": {
                "tags": [
                    "Settings"
                ],
                "summary": "Get settings by group",
                "description": "Returns settings key-value pairs for a specific group (e.g., contact, social, general)",
                "operationId": "getSettingsByGroup",
                "parameters": [
                    {
                        "name": "group",
                        "in": "path",
                        "description": "Setting Group",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "About",
            "description": "About"
        },
        {
            "name": "Branches",
            "description": "Branches"
        },
